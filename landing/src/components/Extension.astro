---
interface Props {
    extensionTitle: string;
    wrapperStyles?: string;
    titleStyles?: string;
}
import cx from 'classnames';
const { extensionTitle, titleStyles, wrapperStyles } = Astro.props;
---

<div class={cx('flex flex-col items-center justify-between rounded-[20px] w-[230px] h-[205px] p-3.5', !wrapperStyles ? 'bg-neon' : '', wrapperStyles)}>
    <h2 class={cx('text-center text-xl font-bold mb-2', !titleStyles ? 'text-blue' : '', titleStyles)}>{extensionTitle}</h2>
    <slot />
</div>
