---
import NavBar from '../components/NavBar';
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container';
import Button from '../components/Button';
import Confetti from '../components/Confetti.astro';
import { Image } from 'astro:assets';
import StackSlider from '../components/StackSlider';
import ElephantScene from '../images/elephantScene.svg';
import Elephant11 from '../images/elephant11.svg';
import Elephant12 from '../images/elephant12.svg';
import Showcase from '../components/Showcase.astro';
import { navigate } from 'astro/transitions/router';
import Section3Confetti from '../components/Section3Confetti.astro';
import TemboStacksSection from '../components/TemboStacksSection';
import Extension from '../components/Extension.astro';
import DetailSequence from '../components/DetailSequence';
import ArrowButton from '../components/ArrowButton.astro';
import Animation from '../components/Animation';
import Footer from '../components/Footer.astro';
import CrossingWalk1 from '../animations/CrossingWalk1.json';
import AdminPack from '../images/adminPack.svg';
import Vectorize from '../images/vectorize.svg';
import PgVector from '../images/pg_vector.svg';
import Bloom from '../images/bloom.svg';
import PgStats from '../images/pg_stat_statements.svg';
import PgCron from '../images/pg_cron.svg';
import PgMQ from '../images/pgmq.svg';
import Bool_plperl from '../images/bool_plperl.svg';
import Amcheck from '../images/amcheck.svg';
import Aggs_for_vecs from '../images/aggs_for_vecs.svg';
import Autoinc from '../images/autoinc.svg';
import Argm from '../images/argm.svg';
import HeroCard from '../components/HeroCard.astro';
import HeroImage1 from '../images/heroImage1.png';
const currentPath = Astro.url.pathname;
---

<Layout title='Tembo: Goodbye Database Sprawl, Hello Postgres'>
	<div class="main-content">
		<NavBar currentPage={currentPath} client:load />
		<div class='w-full h-[150px]' />
		<Container styles='relative'>
			<div class='light-gradient absolute -top-[700px] -right-[100px]' />
			<section class='tembo-hero-section mt-[25px] customXs:mt-[40px] md:mt-[80px]'>
				<div class='flex flex-col items-center justify-center z-10 pb-[100px] relative slide-enter-content'>
					<header class='text-center mb-6'>
						<h2 class='text-white font-light text-[25.5px] customXxs:text-[32px] customXs:text-[40px] customSm:text-[48px] z-20'>Goodbye Database Sprawl,</h2>
						<h1 class='text-neon font-extrabold text-[54.4px] customXxs:text-[68px] customXs:text-[84px] customSm:text-[92px] z-10'>Hello Postgres.</h1>
					</header>
					<Button variant='gradient' size='lg' onClick={() => navigate('https://cloud.tembo.io')}>Try Free</Button>
				</div>
				<Confetti />
			</section>
			<section class='tembo-card-stack-section flex items-center justify-center z-10'>
				<div class='flex items-start gap-8 z-10'>
					<div class='flex flex-col justify-center items-center gap-4 mt-[65px]'>
						<HeroCard title='Enterprise LLM' description='Real-time inference service' subTitle='Built on Stack' wrapperStyles='bg-lightBlue w-[170px] customXs:w-[220px]'>
							<div class='w-full h-[150px] bg-black rounded-xl' />
						</HeroCard>
						<HeroCard description='Real-time inference service' wrapperStyles='bg-neon w-[153px] customXs:w-[195px]' descriptionStyles='text-[10px]'>
							<div class='w-full h-[110px] bg-black rounded-xl' />
						</HeroCard>
					</div>
					<div class='flex flex-col justify-center items-center gap-4'>
						<HeroCard description='Real-time inference service' wrapperStyles='bg-neon w-[153px] customXs:w-[195px]' descriptionStyles='text-[10px]'>
							<div class='w-full h-[110px] bg-black rounded-xl' />
						</HeroCard>
						<HeroCard title='Enterprise LLM' description='Real-time inference service' subTitle='Built on Stack' wrapperStyles='bg-salmon w-[170px] customXs:w-[220px]'>
							<div class='w-full h-[150px] bg-black rounded-xl' />
						</HeroCard>
					</div>
					<div class='flex flex-col justify-center items-center gap-4 mt-[65px]'>
						<HeroCard title='Enterprise LLM' description='Real-time inference service' subTitle='Built on Stack' starFill={'#ffffff'} wrapperStyles='bg-purple w-[170px] customXs:w-[220px]' descriptionStyles='text-white' titleStyles='text-white' subTitleStyles='text-white'>
							<div class='w-full h-[150px] bg-black rounded-xl' />
						</HeroCard>
						<HeroCard description='Real-time inference service' wrapperStyles='bg-lightBlue w-[153px] customXs:w-[195px]' descriptionStyles='text-[10px]'>
							<div class='w-full h-[110px] bg-black rounded-xl' />
						</HeroCard>
					</div>
					<div class='flex flex-col justify-center items-center gap-4'>
						<HeroCard description='Real-time inference service' wrapperStyles='bg-lightBlue w-[153px] customXs:w-[195px]' descriptionStyles='text-[10px]'>
							<div class='w-full h-[110px] bg-black rounded-xl' />
						</HeroCard>
						<HeroCard title='Enterprise LLM' description='Real-time inference service' subTitle='Built on Stack' wrapperStyles='bg-blue w-[170px] customXs:w-[220px]' starFill={'#ffffff'} descriptionStyles='text-white' titleStyles='text-white' subTitleStyles='text-white'>
							<div class='w-full h-[150px] bg-black rounded-xl' />
						</HeroCard>
					</div>
					<div class='flex flex-col justify-center items-center gap-4 mt-[65px]'>
						<HeroCard title='Enterprise LLM' description='Real-time inference service' subTitle='Built on Stack' wrapperStyles='bg-lightBlue w-[170px] customXs:w-[220px]'>
							<div class='w-full h-[150px] bg-black rounded-xl' />
						</HeroCard>
						<HeroCard description='Real-time inference service' wrapperStyles='bg-neon w-[153px] customXs:w-[195px]' descriptionStyles='text-[10px]'>
							<div class='w-full h-[110px] bg-black rounded-xl' />
						</HeroCard>
					</div>
				</div>
			</section>
		</Container>
		<section class='tembo-build-any-application-section pb-[150px]'>
			<Container>
				<div class='flex flex-col items-center justify-center mt-36 gap-6'>
					<h3 class='text-neon font-secondary'>BUILT TO SCALE</h3>
					<h1 class='text-white font-bold text-[25.5px] customXxs:text-[32px] customXs:text-[40px] customSm:text-[50px] max-w-5xl text-center leading-normal'>
						Build any application on Postgres, the everything database
					</h1>
					<Button variant='gradient' size='lg' onClick={() => navigate('https://cloud.tembo.io')}>Try Free</Button>
				</div>
			</Container>
			<div class='container max-w-stackSlider mx-auto'>
				<StackSlider client:only="react" />
			</div>
		</section>
		<section class='tembo-postgres-section'>
			<Container styles='relative py-28'>
				<div class='light-gradient absolute -top-[200px] right-[-100px]' />
				<div class='flex flex-col items-center customSm:items-start'>
					<div class='flex flex-col items-center customXs:items-start gap-6 mb-12 customSm:mb-0'>
						<h1 class='text-neon font-bold text-4xl customSm:text-5xl customMd:text-6xl z-10 text-center'>100% Postgres,</h1>
						<h2 class='text-white font-light text-2xl customSm:text-3xl z-10 text-center'>the most beloved database on earth</h2>
						<Button variant='gradient' size='lg' styles='w-max z-10' onClick={() => navigate('https://cloud.tembo.io')}>Try Free</Button>
					</div>
					<div class='relative customSm:absolute right-0 top-1/3 customSm:px-[80px] z-10'>
						<Showcase />
					</div>
					<Image src={ElephantScene} alt='Three elephants' class='w-[675px]' />
					<Image src={Elephant11} alt='Three elephants' class='absolute right-[120px] top-[400px] customSm:top-[50px] customSm:right-[150px] w-[200px]' />
					<Image src={Elephant12} alt='Three elephants' class='absolute right-[50px] top-[700px] customSm:top-[150px] customSm:right-[500px] w-[150px]' />
				</div>
			</Container>
		</section>
		<Container styles='relative'>
			<Section3Confetti />
		</Container>
		<TemboStacksSection client:load />
		<section class='tembo-extensions-section pt-28 bg-offBlack'>
			<Container>
				<div class='flex flex-col items-center justify-center'>
					<h2 class='text-white font-bold text-[50px] max-w-5xl text-center leading-normal w-full'>Packed with <span class='bg-gradient-to-r from-salmon via-purple to-lightPurple inline-block text-transparent bg-clip-text text-[72px]'>200+</span> Extensions</h2>
				</div>
			</Container>
			<div class='mt-8 container max-w-stackSlider mx-auto flex flex-col items-center justify-center fade-x-md-both-sides'>
				<div class='flex gap-6'>
					<div class='flex flex-col gap-6'>
						<Extension extensionTitle='pg_vector'>
							<Image src={PgVector} alt='Admin Pack' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='postgresml' wrapperStyles='bg-pink' titleStyles='text-neon'>
							<Image src={AdminPack} alt='postgresml' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[200px]'>
						<Extension extensionTitle='pg_cron' wrapperStyles='bg-pink' titleStyles='text-neon'>
							<Image src={PgCron} alt='pg_cron' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='AdminPack' wrapperStyles='bg-white' titleStyles='text-black'>
							<Image src={AdminPack} alt='Admin Pack' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[100px]'>
						<Extension extensionTitle='PGMQ' wrapperStyles='bg-customDarkGrey' titleStyles='text-white'>
							<Image src={PgMQ} alt='pgmq' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='pg_vectorize' wrapperStyles='bg-neon'>
							<Image src={Vectorize} alt='Admin Pack' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[130px]'>
						<Extension extensionTitle='argm'>
							<Image src={Argm} alt='Argm' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='pg_stat_statements' wrapperStyles='bg-pink' titleStyles='text-neon'>
							<Image src={PgStats} alt='Admin Pack' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[80px]'>
						<Extension extensionTitle='autoinc' wrapperStyles='bg-white' titleStyles='text-black'>
							<Image src={Autoinc} alt='Autoinc' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='aggs_for_vecs' wrapperStyles='bg-neon'>
							<Image src={Aggs_for_vecs} alt='Aggs_for_vecs' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[250px]'>
						<Extension extensionTitle='bloom' wrapperStyles='bg-pink' titleStyles='text-neon'>
							<Image src={Bloom} alt='Bloom' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='bool_plperl' wrapperStyles='bg-white' titleStyles='text-black'>
							<Image src={Bool_plperl} alt='bool_plperl' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[200px]'>
						<Extension extensionTitle='pg_vector'>
							<Image src={PgVector} alt='Admin Pack' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='postgresml' wrapperStyles='bg-customDarkGrey' titleStyles='text-white'>
							<Image src={AdminPack} alt='Admin Pack' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
					<div class='flex flex-col gap-6 mt-[260px]'>
						<Extension extensionTitle='amcheck' wrapperStyles='bg-neon' titleStyles='text-blue'>
							<Image src={Amcheck} alt='Amcheck' class='rounded-[20px] w-full h-full' />
						</Extension>
						<Extension extensionTitle='pg_vectorize' wrapperStyles='bg-pink' titleStyles='text-neon'>
							<Image src={Vectorize} alt='Pg_vectorize' class='rounded-[20px] w-full h-full' />
						</Extension>
					</div>
				</div>
				<Button variant='gradient' size='lg' styles='mb-2' onClick={() => navigate('https://cloud.tembo.io')}>Try Free</Button>
			</div>
		</section>
		<section class='why-tembo-section pt-28 bg-offBlack pb-[170px]'>
			<Container styles='relative'>
				<div class='flex flex-col'>
					<h2 class='text-7xl text-lightNeon font-bold'>Why Tembo?</h2>
					<div class='mt-16 z-10'>
						<div class='flex flex-col gap-12'>
							<div class='flex justify-between w-full gap-16'>
								<DetailSequence header='Reduce Sprawl' text='Consolidate your data stack without cost or lock-in worries.' styles='w-full' />
								<DetailSequence header='Fully Extensible' text='200+ extensions and counting means Tembo can be whatever you need it to be.' styles='w-full' />
								<DetailSequence header='External App Support' text='You’re not limited to just extensions—we also enable a growing library of extensions that can be deployed alongside your instance.' styles='w-full' />
							</div>
							<div class='flex justify-between w-full gap-16'>
								<DetailSequence header='Developer Friendly' text='Intuitive interface lets you build data services like you build applications.' styles='w-full' />
								<DetailSequence header='Postgres, not "Postgres-Compatible"' text='If you can do it on Postgres, you can do it on Tembo.' styles='w-full' />
								<DetailSequence header='One Vendor, Fully Managed' text='A zero-headache, end-to-end data service right from day one. We give you solutions, not just tools.' styles='w-full' />
							</div>
							<div class='flex justify-between w-full gap-16'>
								<DetailSequence header='Open Source' text='We’re committed to helping build the future of Postgres.' styles='w-full' />
								<DetailSequence header='Develop Locally, Unleash Anywhere' text='Develop and deploy your application in a local environment, and easily run it on the cloud.' styles='w-full' />
								<DetailSequence header='Use-case Optimized' text='Stacks are pre-made, customized “flavors” of Postgres + extensions designed for common application needs.' styles='w-full' />
							</div>
						</div>
					</div>
				</div>
			</Container>
		</section>
		<section class='tembo-footer-section pt-28 relative bg-offBlack'>
			<footer class='tembo-footer relative'>
				<div class='container max-w-stackSlider mx-auto relative'>
					<Animation client:only="react" animation={CrossingWalk1} styles='-z-1 -top-[100px] md:-top-[300px] lg:-top-[600px]' />
					<div class='flex flex-col items-center justify-center pb-[200px]'>
						<h2 class='text-white font-bold text-[50px] max-w-5xl text-center leading-normal w-full z-50 mt-28'>Join The Herd</h2>
						<div class='flex items-center justify-center mt-10 gap-4 z-50'>
							<Button variant='gradient' size='lg' onClick={() => navigate('https://cloud.tembo.io')} styles='h-[60px] w-[182px] font-semibold font-primary'>Try Free</Button>
							<ArrowButton title='Join the team' link='https://tembo.breezy.hr/' />
						</div>
					</div>
				</div>
				<Container>
					<Footer />
				</Container>
			</footer>
		</section>
	</div>
</Layout>

<style>
	.main-content {
		background: rgb(0, 0, 0);
		background-image: url('/pixelBg.svg');
		width: 100%;
		height: 100%;
	}
	.light-gradient {
		width: 45%;
		height: 1200px;
		background: radial-gradient(#ffffff 0px, transparent 35%);
		-ms-filter: blur(300px) saturate(150%);
		-webkit-filter: blur(300px) saturate(150%);
		filter: blur(300px) saturate(150%);
	}

	@-moz-document url-prefix() {
		.light-gradient {
			width: 45%;
			height: 1200px;
			background: radial-gradient(#ffffff 0px, transparent 55%);
			-ms-filter: blur(300px) saturate(150%);
			-webkit-filter: blur(300px) saturate(150%);
			filter: blur(300px) saturate(150%);
			opacity: 0.1;
		}
	}

	.tembo-postgres-section {
  		background-image: linear-gradient(-30deg, transparent 50%, #1C1C1C 50%);
	}
</style>
