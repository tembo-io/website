---
import NavBar from '../components/NavBar';
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container';
import Button from '../components/Button';
import Confetti from '../components/Confetti.astro';
import Card from '../components/Card';
import { Image } from 'astro:assets';
import Star from '../images/star.svg';
import StackHero from '../images/stackHero.svg';
const currentPath = Astro.url.pathname;
---

<Layout title='Tembo: Goodbye Database Sprawl, Hello Postgres'>
	<div class="main-content">
		<NavBar currentPage={currentPath} client:load />
		<div class='w-full h-[150px]' />
		<Container styles='relative'>
			<section class='tembo-hero-section mt-[144px]'>
				<div class='flex flex-col items-center justify-center z-10 pb-[100px] relative'>
					<header class='text-center'>
						<h2 class='text-white font-light text-5xl z-20'>Goodbye Database Sprawl,</h2>
						<h1 class='text-neon font-extrabold text-[112px] z-10'>Hello Postgres.</h1>
					</header>
					<a href="https://cloud.tembo.io"><Button variant='gradient' size='lg' styles='mt-6'>Sign up</Button></a>
				</div>
				<Confetti />
			</section>
			<section class='tembo-card-stack-section flex items-center justify-center'>
				<Image src={StackHero} alt='Tembo Card Stack' />
			</section>
			<section class='tembo-build-any-application-section'>
				<div class='flex flex-col items-center justify-center mt-36 gap-6'>
					<h3 class='text-neon font-secondary'>CURRENTLY IN BETA</h3>
					<h1 class='text-white font-bold text-6xl max-w-4xl text-center leading-normal'>Build any application, <span>on Postgres</span></h1>
				</div>
			</section>
		</Container>
	</div>
</Layout>

<style>
	.main-content {
		background-image: url('/pixelBg.png');
		width: 100%;
		height: 100%;
		z-index: 1;
		background-repeat: no-repeat;
   		background-size: cover;
	}
</style>
