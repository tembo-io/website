---
import BlogList from '../../../components/BlogList.astro';
import Layout from '../../../layouts/Layout.astro';
import NavBar from '../../../components/NavBar';
import { getCollection, type CollectionEntry } from 'astro:content';
import { sortPostDates, TAGS } from '../../../content/config';

export async function getStaticPaths() {
    const posts = (await getCollection('blog')).sort(
            (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => sortPostDates(a, b)
    );
	return TAGS.map((tag) => ({
        params: { slug: tag.toLowerCase() },
        props: posts.filter((post: CollectionEntry<'blog'>) => post.data.tags.includes(tag.toLowerCase())),
    }));
}

const posts = Astro.props;
const currentPath = Astro.url.pathname;
---


<Layout title='Blog | Tembo'>
    <NavBar client:load currentPage={currentPath} />
    <BlogList posts={Object.values(posts)} />
</Layout>
