---
import NavBar from '@components/NavBar';
import Layout from 'src/layouts/Layout.astro';
import Container from '@components/Container';
import Footer from '@components/Footer.astro';
import Button from '@components/Button';
import { Image } from 'astro:assets';
import Tembonauts from 'src/images/tembonauts.svg';
import ContactElephant from '../../public/contact-elephant.svg';
import ArrowRight from 'src/images/arrow-right-white.svg';
import BootcampForm from '@components/BootcampForm';
import Markdown from '@components/Markdown.astro';

const currentPath = Astro.url.pathname;
---

<Layout title='Tembo Bootcamp'>
	<NavBar client:load currentPage={currentPath} />
	<Container>
		<section
			class='flex flex-col-reverse md:flex-col-reverse lg:flex-row w-full items-center justify-center mt-[120px] mobile:mt-[180px] justify-between'
		>
			<div class='flex flex-col w-full md:w-full lg:w-1/2'>
				<div
					class='text-neon font-bold tracking-[0.47px] text-[44px] lg:text-[60px] leading-tight mb-10 w-full lg:w-1/2 text-center lg:text-left'
				>
					Tembo Postgres Bootcamp
				</div>
				<p
					class='text-lightGrey font-normal font-secondary text-sm mb-10 text-center lg:text-left w-full lg:w-3/4 leading-6'
				>
					From 0 to use case in a few days.
				</p>
				<div
					class='flex flex-row justify-center align-center lg:justify-start gap-4'
				>
					<Button
						variant='primary'
						size='lg'
						client:load
						scrollTo={true}
						scrollToElement='bootcampForm'
					>
						<div class='flex flex-row gap-2 my-auto'>
							Schedule a Postgres Bootcamp
							<Image
								src={ArrowRight}
								width={16}
								height={16}
								alt='chevron arrow right'
							/>
						</div>
					</Button>
				</div>
			</div>
			<Image src={Tembonauts} alt='hero image' />
		</section>
		<section
			class="class='tembo-for-startups-section flex flex-col w-full items-center justify-center my-[100px]"
		>
			<Markdown>
				<h2>
					Tembo clients face critical data challenges. Join our
					Postgres Bootcamp to:
				</h2>
				<ul>
					<li>
						<b
							>Leverage PostgreSQL for mission-critical
							applications:</b
						>
						Gain insights into applying PostgreSQL to your most important
						projects.
					</li>
					<li>
						<b>Develop and refine use cases:</b> Create and enhance initial
						use cases tailored to your business needs.
					</li>
					<li>
						<b
							>Efficiently onboard and train users for rollout in
							operations:</b
						> Ensure a smooth rollout by effectively training your team
						for operational success.
					</li>
				</ul>
				<hr class='mt-20' />
				<p>
					Unlock the full potential of PostgreSQL with Tembo’s
					comprehensive bootcamp, tailored to address your company’s
					specific challenges. Our bootcamp provides personalized,
					hands-on training to master PostgreSQL’s advanced features
					and capabilities. From 0 to use case in a few days, you’ll
					be equipped to confidently tackle real-world challenges.
				</p>
				<h2>Why Choose Tembo?</h2>
				<ul>
					<li>
						<b>Expert Instructors:</b>
						Learn from industry experts with years of experience in PostgreSQL.
					</li>
					<li>
						<b>Customized Training:</b>
						We tailor the bootcamp to meet your specific needs and goals.
					</li>
					<li>
						<b>Community Support:</b> Join a community of like-minded
						professionals and get support even after the bootcamp ends.
					</li>
				</ul>
			</Markdown>
		</section>
		<section>
			<div
				class='light-gradient absolute -top-[700px] -right-[100px] overflow-hidden'
			>
			</div>
			<div class='grid md:grid-cols-2 grid-cols-1 md:gap-0 gap-8'>
				<div class='flex items-center md:justify-center'>
					<Image
						src={ContactElephant}
						alt='contact elephant image'
						width={400}
						height={400}
						class='lg:block hidden'
					/>
					<Image
						src={ContactElephant}
						alt='contact elephant image'
						width={300}
						height={300}
						class='lg:hidden md:block hidden'
					/>
					<Image
						src={ContactElephant}
						alt='contact elephant image'
						width={120}
						height={120}
						class='max-[768px]:block hidden'
					/>
				</div>
				<BootcampForm client:load />
			</div>
		</section>
	</Container>
	<div class='relative'>
		<div
			class='absolute top-0 flex h-[1px] w-full flex-row items-center justify-center opacity-100 shine'
		>
		</div>
		<Container>
			<div class='mt-16 mobile:mt-24'>
				<Footer />
			</div>
		</Container>
	</div>
</Layout>
