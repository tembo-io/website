---
import NavBar from '@components/NavBar';
import Footer from '@components/Footer.astro';
import Layout from '@layouts/Layout.astro';
import Container from '@components/Container';
import Button from '@components/Button';
import { Image } from 'astro:assets';
import universityHero from '@images/universityHero.svg';
import ArrowRight from '@images/arrow-right-white.svg';
const currentPath = Astro.url.pathname;
---

<Layout title='University | Tembo'>
	<NavBar client:load currentPage={currentPath} isBanner={false} />
	<section class='mt-[120px] mobile:mt-[180px] flex flex-col items-center'>
		<Container>
			<header class='text-center'>
				<h1
					class='text-white font-bold tracking-[0.47px] text-[32px] sm:text-[56px] md:text-[64px] lg:text-[72px] leading-tight
							z-10 mb-6'
				>
					Tembo University
				</h1>
				<p
					class='text-lightGrey font-normal font-secondary text-base mb-10 text-center w-full leading-6'
				>
					Learn how to Just Use Postgres!
				</p>
				<div class='flex items-center justify-center'>
					<Button
						variant='gradient'
						size='lg'
						isLinkTag={true}
						link='https://cloud.tembo.io/sign-up'
						client:load
					>
						<div class='flex flex-row gap-2 my-auto'>
							Start Learning
							<Image
								src={ArrowRight}
								width={16}
								height={16}
								alt='chevron arrow right'
							/>
						</div>
					</Button>
				</div>
			</header>
			<div class='max-w-stackSlider fade-x-md-both-sides mt-20 mb-12'>
				<Image
					src={universityHero}
					alt='elephant in school'
					class='w-full'
				/>
			</div>
		</Container>
	</section>
	<div class='relative z-10 bg-offBlack'>
		<div
			class='absolute top-0 flex h-[1px] w-full flex-row items-center justify-center opacity-100 shine'
		>
		</div>
		<Container styles='z-50'>
			<Footer />
		</Container>
	</div>
</Layout>
