---
import DocsLayout from '../../layouts/DocsLayout.astro';
import { Image } from 'astro:assets';
import HeroImage from '../../images/tembonauts.svg';
import { getSideBarLinks } from '../../util/docsUtils';
import DocCard from '../../components/docs/DocCard.astro';

const links = await getSideBarLinks();
---

<DocsLayout
	isNestedDoc={false}
	sideBarMenuSections={links}
	isProgressBar={false}
>
	<div class='flex flex-col'>
		<div class='flex flex-col xl:flex-row justify-between gap-8'>
			<div class='flex flex-col gap-6'>
				<h1
					class='text-neon font-extrabold text-3xl lg:text-4xl xl:text-5xl'
				>
					Tembo Docs
				</h1>
				<p class='max-w-xl text-lightGrey'>
					Tembo is the Postgres developer platform for building every
					data service. We collapse the database sprawl and empower
					users with a high-performance, fully-extensible managed
					Postgres service.
				</p>
			</div>
			<Image
				src={HeroImage}
				alt='tembo elephants on the moon'
				class='flex rounded-2xl w-full max-w-[600px]'
			/>
		</div>
		<ul class='w-full mt-16 grid grid-cols-12 gap-6'>
			<DocCard
				url='/docs/getting-started/getting_started'
				icon='/icons/cloud.svg'
				title='Tembo Cloud'
				description='Tembo provides Tembo Cloud, a fully managed Postgres service with support for over 200+ extensions!.'
			/>
			<DocCard
				url='/docs/product/stacks/intro-to-stacks'
				icon='/icons/stacks.svg'
				title='Stacks'
				description='A tembo stack is a pre-built, use case specific Postgres deployment which enables you to quickly deploy specialized data services that can replace external, non-Postgres data services.'
			/>
			<DocCard
				url='/docs/getting-started/postgres_guides/all-possible-joins-in-postgres'
				icon='/icons/book.svg'
				title='Postgres Guides'
				description='Postgres specific guides crafted for you by the Tembo team!'
			/>
			<DocCard
				url='/docs/getting-started/quickstarts/java'
				icon='/icons/code.svg'
				title='Connection Examples'
				description='Learn how to connect to your new Tembo database with your favorite programming language or ORM/framework.'
			/>
		</ul>
	</div>
</DocsLayout>
